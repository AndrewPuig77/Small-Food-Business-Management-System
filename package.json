{
  "name": "food-business-management-system",
  "version": "0.1.0",
  "description": "Desktop application for managing small food service establishments",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "vite --config config/vite.config.js",
    "build": "vite build --config config/vite.config.js",
    "preview": "vite preview --config config/vite.config.js",
    "lint": "eslint .",
    "test": "jest"
  },
  "keywords": [
    "electron",
    "vue",
    "pos",
    "inventory",
    "restaurant"
  ],
  "author": "Food Business Management Team",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@vitejs/plugin-vue": "^6.0.2",
    "autoprefixer": "^10.4.22",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "vite": "^7.2.4",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "chart.js": "^4.5.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "sql.js": "^1.13.0",
    "vue": "^3.5.25",
    "vue-router": "^4.6.3",
    "vuex": "^4.1.0",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.foodbusiness.app",
    "productName": "Food Business Manager",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    }
  }
}
